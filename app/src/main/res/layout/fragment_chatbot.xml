<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chat_background">
    <EditText
        android:id="@+id/send_message"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/send_message"
        android:textColor="@color/white"
        android:hint="@string/message_hint"
        android:textColorHint="@color/white"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_send"
        android:background="@color/background"
        app:layout_constraintStart_toEndOf="@+id/send_message"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:background="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/user_message"
        android:hint="Где находится буфет?"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="115dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_message"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/bot_message"
        android:hint="Привет! Сейчас найду..."
        android:textColorHint="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="botTaU набирает сообщение..."
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/send_message"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="botTaU"
        android:textColor="@color/bot"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toTopOf="@id/send_message"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>